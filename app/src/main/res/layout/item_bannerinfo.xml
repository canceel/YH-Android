<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3ffffff">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f3ffffff"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_bannerInfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_default"
            android:background="@color/argb_white"
            android:gravity="center"
            android:text="图表说明"
            android:textColor="@color/co5"
            android:textSize="@dimen/font_large" />

        <include
            layout="@layout/devider_h"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_count_bannerInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="top"
                android:textSize="13sp"
                android:textColor="@color/co3_syr"/>

        </ScrollView>

    </LinearLayout>

    <ImageButton
        android:id="@+id/imgBtn_ColsPopupWindow_bannerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/pop_close" />
</RelativeLayout>