<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_ragment_broken"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow_right"
    android:orientation="vertical">

    <com.jonas.jgraph.graph.NChart
        android:id="@+id/nchart_linefragment"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/space_default_small_s"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_title_vpitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/argb_font_cont_333"
            android:textSize="@dimen/font_default"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.intfocus.yh_android.view.AutoTextView
            android:maxLines="1"
            android:id="@+id/tv_number_vpitem"
            style="@style/tv_mererMinTitle_stytle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:textSize="@dimen/font_large_xs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_vpitem_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/argb_unitcolor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.intfocus.yh_android.view.MeterCursor
                android:id="@+id/img_vpitem"
                android:layout_width="@dimen/space_default_large_s"
                android:layout_height="@dimen/space_default_large_s" />

            <TextView
                android:id="@+id/tv_compare_vpitem"
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_default_small" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
