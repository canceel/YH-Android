<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_action_bar"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@color/co10_syr">

    <ImageView
        android:id="@+id/iv_banner_back"
        style="@style/BannerBackButton"
        android:onClick="dismissActivity"/>

    <TextView
        android:id="@+id/tv_banner_back"
        style="@style/BannerBackText"
        android:layout_toRightOf="@id/bannerBack"
        android:onClick="dismissActivity"/>

    <TextView
        android:id="@+id/tv_banner_title"
        style="@style/BannerTitle"
        android:text="主题名称主题名称主题名称"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/iv_banner_setting"
        style="@style/BannerRightButton"
        android:onClick="launchDropMenuActivity"
        android:src="@drawable/nav_more"/>
</RelativeLayout>