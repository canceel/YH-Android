<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_ragment_curve"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow_right"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_default">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title_vpitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/argb_font_cont_333"
            android:textSize="@dimen/font_default"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="@color/argb_font_cont_333"
            android:textSize="@dimen/font_small"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_vpitem" />

        <com.intfocus.yonghuitest.view.AutoTextView
            android:maxLines="1"
            android:id="@+id/tv_number_vpitem"
            style="@style/tv_mererMinTitle_stytle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/argb_font_red"
            android:textSize="@dimen/font_medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.intfocus.yonghuitest.view.MeterCursor
                android:id="@+id/img_vpitem"
                android:layout_width="@dimen/space_default_large_s"
                android:layout_height="@dimen/space_default_large_s" />

            <TextView
                android:id="@+id/tv_compare_vpitem"
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_default_small"
                android:textColor="@color/argb_font_red" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <com.jonas.jgraph.graph.NChart
        android:id="@+id/nchart_linefragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_default_small_s" />

</LinearLayout>
