<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f3ffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f3ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_bannerInfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_default"
            android:background="@color/argb_white"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/co5"
            android:textSize="@dimen/font_large" />

        <include
            layout="@layout/devider_h"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_count_bannerInfo"
                style="@style/tv_unit_chart_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:padding="@dimen/space_default" />

        </ScrollView>

    </LinearLayout>

    <ImageButton
        android:id="@+id/imgBtn_ColsPopupWindow_bannerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/space_default"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/pop_close" />
</RelativeLayout>