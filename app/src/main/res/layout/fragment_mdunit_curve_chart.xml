<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="@dimen/space_default"
              android:background="@android:color/white"
              android:orientation="vertical"
              tools:context="com.intfocus.yonghuitest.subject.template_v2.ModularTwo_UnitCurveChartFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_default">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_chart_table_xlabel"
                style="@style/tv_unit_chart_m" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_default_small"
            android:gravity="bottom">

            <TextView
                android:id="@+id/tv_chart_table_target1"
                style="@style/tv_unit_chart_x" />

            <TextView
                android:id="@+id/tv_chart_table_target2"
                style="@style/tv_unit_chart_x" />

            <TableRow style="@style/tv_unit_chart_x">

                <TextView
                    android:id="@+id/tv_chart_table_rate"
                    style="@style/tv_unit_chart_x"
                    android:layout_width="wrap_content"
                    android:layout_weight="0"
                    android:paddingRight="@dimen/space_default_small_s" />

                <com.intfocus.yonghuitest.view.RateCursor
                    android:id="@+id/img_RateCursor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </TableRow>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_chart_table_target1name"
                style="@style/tv_unit_chart_m" />

            <TextView
                android:id="@+id/tv_chart_table_target2name"
                style="@style/tv_unit_chart_m" />

            <TextView
                style="@style/tv_unit_chart_m"
                android:text="变化率" />
        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mdrpUnit_curvechart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
</LinearLayout>
