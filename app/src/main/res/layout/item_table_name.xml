<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_default_small"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_tableName_dot"
            android:layout_width="@dimen/space_default"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@mipmap/graph_blackpot" />

        <TextView
            android:id="@+id/tv_tableName_value"
            style="@style/tv_unit_chart_m"
            android:layout_height="match_parent"
            android:layout_weight="3" />
    </TableRow>
</FrameLayout>
