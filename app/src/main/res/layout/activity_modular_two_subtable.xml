<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_subtable_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_default"
            android:background="@color/argb_white"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/co5"
            android:textSize="@dimen/font_large" />

        <FrameLayout
            android:id="@+id/fl_subtable_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/imgBtn_ColsPopupWindow_bannerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/space_default"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/pop_close" />
</RelativeLayout>