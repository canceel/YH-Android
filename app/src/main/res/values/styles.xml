        <item name="android:windowFullscreen">true</item>
        <!-- 将 Activity 的 Theme 设置成透明 -->
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <!-- Dashboard theme. -->
    <style name="AppDashboardTheme" parent="Theme.AppCompat.Light">
