<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <!-- 将 Activity 的 Theme 设置成透明 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme2" parent="Theme.AppCompat.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="actionBarSize">50dp</item>
        <!-- 将 Activity 的 Theme 设置成透明 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <!-- 将 Activity 的 Theme 设置成透明 -->
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>


    <!-- Launch theme. -->
    <style name="LauncherTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!--<item name="android:windowActionBar">false</item>-->
        <item name="android:windowNoTitle">true</item>
        <!--<item name="colorPrimary">@color/launch_color</item>-->
        <!--<item name="colorPrimaryDark">@color/launch_color</item>-->
        <!-- 隐藏状态栏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 将 Activity 的 Theme 设置成透明 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- GuidePage theme. -->
    <style name="GuidePageTheme" parent="Theme.AppCompat.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/launch_color</item>
        <item name="colorPrimaryDark">@color/launch_color</item>
